<% include ../partials/header %>


<div id="showContainer" class="container ">
<% if(currentUser){ %>
        <a class="btn btn-warning btn-lg" href="/projects/<%=project._id%>/edit">Edit</a>
        <form id="delete-form" action="/projects/<%=project._id %>?_method=DELETE" method="post">
            <button class="btn btn-lg btn-danger">
                Delete
            </button> 
        </form>
<% } %>
    <div class="row align-items-center mb-4">
        <div class="col-md-6 ">
            <h1 class="text-center heading"><%=project.title %></h1>
        </div> 
        <div class="col-md-6 ">
            <p class="text-center description"><%=project.description %></p>
        </div>      
    </div>

<% for(let i=0;i< project.images.length; i++){ %>
    <% if(i%2==1) {%>
    <div class="row align-items-center mb-4">
        <div class="col-md-6 order-md-2 order-sm-1">
            <img class="img-fluid" src="<%=project.images[i].img%>" alt="No image" >
        </div> 
        <div class="col-md-6 order-sm-2 order-md-1">
            <div class="row justify-content-center">
                    <p class="text-center description"><%= project.images[i].description %></p>
            </div>
        </div>      
    </div>
    <% } else { %>
        <div class="row align-items-center mb-4">
                <div class="col-md-6 order-sm-2">
                    <div class="row justify-content-center">
                            <p class="text-center description"><%= project.images[i].description %></p>
                    </div>
                </div>      
                <div class="col-md-6 ">
                    <img class="img-fluid" src="<%=project.images[i].img%>" alt="No image" >
                </div> 
            </div>
    <% } %>
<% } %>
</div>





<% include ../partials/footer %>

